    <DockPanel>
        <!-- Menu docked at top -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="New" />
                <MenuItem Header="Open" />
                <Separator />
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Copy" />
                <MenuItem Header="Paste" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main content grid below the menu -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Cell 1 -->
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                <Label Content="Name:" />
                <TextBox x:Name="txtName" Width="150" />
                <Label Content="Email:" Margin="0,10,0,0" />
                <TextBox x:Name="txtEmail" Width="150" />
            </StackPanel>

            <!-- Cell 2 -->
            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="btnSubmit" Content="Submit" Width="100" Height="30" Click="btnSubmit_Click" />
            </StackPanel>

            <!-- Cell 3 -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                <Label Content="Entered Name:" FontWeight="Bold"/>
                <Label x:Name="lblNameResult" Content="-" />
                <Label Content="Entered Email:" FontWeight="Bold" Margin="0,10,0,0"/>
                <Label x:Name="lblEmailResult" Content="-" />
            </StackPanel>

            <!-- Cell 4 -->
            <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap"
                       Margin="10" Text="Instructions: Enter your name and email, then click Submit."
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </DockPanel>
