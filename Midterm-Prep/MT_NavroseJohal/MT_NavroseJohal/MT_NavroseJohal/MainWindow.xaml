
<Window x:Class="MT_NavroseJohal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MT_NavroseJohal"
        mc:Ignorable="d"
        Title="Wage Calculator - by Navrose Johal" Height="450" Width="800">

    <Grid Margin="10">
        <!-- Left side: Employee List -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="150">
            <TextBlock Text="Employees:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox Name="EmployeeListBox" Height="370"  SelectionChanged="EmployeeListBox_SelectionChanged" />
        </StackPanel>

        <!-- Right side content -->
        <StackPanel Margin="170,0,0,0">

            <!-- Employee Type Section -->
                
                <GroupBox Header="Select Type of Employee" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <RadioButton Name="rdoHourly" Content="Hourly Paid" Margin="0,0,10,0" Checked="EmployeeType_Checked" IsChecked="True"/>
                        <RadioButton Name="rdoCommission" Content="Commission Based" Margin="0,0,10,0" Checked="EmployeeType_Checked"/>
                        <RadioButton Name="rdoWeekly" Content="Weekly Salary" Checked="EmployeeType_Checked"/>
                    </StackPanel>
                </GroupBox>

                <!-- Input Section -->
            <GroupBox Header="Input the Employee's Information" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Labels and Inputs -->
                    <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                    <TextBox Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock x:Name="lblHoursWorked" Text="Hours Worked:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                    <TextBox Name="HoursWorkedTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock x:Name="lblHourlyWage" Text="Hourly Wage:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                    <TextBox Name="HourlyWageTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" Margin="20,0,0,0" VerticalAlignment="Center">
                        <Button Name="CalculateButton" Content="Calculate" Width="80" Margin="0,5" Click="Calculate_Click"/>
                        <Button Name="ClearButton" Content="Clear" Width="80" Margin="0,5" Click="Clear_Click"/>
                        <Button Name="CloseButton" Content="Close" Width="80" Margin="0,5" Click="Exit_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Output Section -->
            <GroupBox Header="Calculated Wage">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Gross Earnings:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                    <TextBox Name="GrossEarningsTextBox" Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>

                    <TextBlock Text="Tax:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                    <TextBox Name="TaxTextBox" Grid.Row="1" Grid.Column="1" Margin="5" IsReadOnly="True"/>

                    <TextBlock Text="Net Earnings:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                    <TextBox Name="NetEarningsTextBox" Grid.Row="2" Grid.Column="1" Margin="5" IsReadOnly="True"/>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>

